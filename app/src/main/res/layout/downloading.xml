<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_dialog_layout_design_user_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/MeasurementStatusText"
            android:layout_width="337dp"
            android:layout_height="50dp"
            android:text="(1/3) Capturing UV/Vissible"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ProgressMeasurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <ProgressBar
                android:id="@+id/progressBarVIS"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:indeterminate="false"
                android:max="100"

                android:progress="0"
                android:secondaryProgress="0"


                />

            <ProgressBar
                android:id="@+id/progressBarNIR"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:indeterminate="false"

                android:max="100"
                android:paddingLeft="10dp"
                android:progress="0"
                android:secondaryProgress="0"


                />

            <ProgressBar
                android:id="@+id/progressBarFLUO"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center_horizontal"
                android:indeterminate="false"

                android:max="100"
                android:paddingLeft="10dp"
                android:progress="0"
                android:secondaryProgress="0"


                />


        </LinearLayout>


        <TextView
            android:id="@+id/DataDownload"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Downloading Measurement Results"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="" />

        <ProgressBar
            android:id="@+id/progressBarData"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:secondaryProgress="0"


            />

        <TextView
            android:id="@+id/dialogImage"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Downloading Image Data"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="" />

        <ProgressBar
            android:id="@+id/progressBarImage"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:secondaryProgress="0"


            />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>