<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/white_button" android:state_pressed="true" />
    <item android:drawable="@drawable/white_button" android:state_checked="true" />
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/buttonCornerRadius" />
            <solid android:color="@color/light_grey_transparent" />
            <stroke android:width="1dp" android:color="@color/light_grey" />
        </shape>
    </item>
    <item android:drawable="@drawable/white_border_button" android:state_pressed="false" />
</selector>
